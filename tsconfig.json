{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "nodenext",
    "moduleResolution": "NodeNext",
    "emitDeclarationOnly": true,
    "declaration": true,
    "allowImportingTsExtensions": true,

    "types": ["node"],
    "esModuleInterop": true,

    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["src", "knexfile.ts"]
}
